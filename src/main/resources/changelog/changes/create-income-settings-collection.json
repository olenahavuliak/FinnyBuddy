{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "2024-01-25",
        "author": "Olena",
        "comment": "Create income settings collection",
        "changes": [
          {
            "createCollection": {
              "collectionName": "income_settings",
              "options": {
                "$rawJson": {
                  "validator": {
                    "$jsonSchema": {
                      "bsonType": "object",
                      "required": [
                        "workingDaysPerMonthCount",
                        "workingWeeksPerMonthCount",
                        "workingHoursPerWeekCount",
                        "nationalHolidaysDaysPerYearCount",
                        "vacationDaysPerYearCount"
                      ]
                    }
                  },
                  "validationAction": "error",
                  "validationLevel": "strict"
                }
              }
            }
          }
        ]
      }
    }
  ]
}
