{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "2024-01-25",
        "author": "Olena",
        "comment": "Create income collection",
        "changes": [
          {
            "createCollection": {
              "collectionName": "incomes",
              "options": {
                "$rawJson": {
                  "validator": {
                    "$jsonSchema": {
                      "bsonType": "object",
                      "required": [
                        "userId",
                        "amount",
                        "isRegular",
                        "type",
                        "createdAt"
                      ]
                    }
                  },
                  "validationAction": "error",
                  "validationLevel": "strict"
                }
              }
            }
          }
        ]
      }
    }
  ]
}
